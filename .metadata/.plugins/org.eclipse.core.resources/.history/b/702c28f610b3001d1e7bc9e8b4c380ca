public class GallonConversionAnisov
{
	//class constants
	public static final double LITERS = 3.78;
	
	public static void main (String[] args)
	{
		//calling the 2 methods that make up the code
		description();
		galToLitConversion();
   	}
	////////////////////////////////////////////////////////////
	/* Explain what the method #1 does as a comment here*/
	public static void description()//<-- rename to a meaningful name
	{
		for(int i = 1; i<=81; i++) {
			System.out.print("&");
		};
		System.out.println("\n&           This program shows you conversions from gallons to liters           &");
		System.out.println("&                     1 gallon is equivalent to 3.78 liters                     &");
		System.out.println("&                                                                               &");
		for(int i = 1; i<=81; i++) {
			System.out.print("&");
		};
	} 
   
   
   
	////////////////////////////////////////////////////////////////////
	/*provide a description of the method #2*/
	public static void galToLitConversion()  //  <-- must change the method name to a meaningful name
	{
		System.out.println("\nGallon         Liter");
		for (int i = 1; i <= 100; i++) {
			int gallons = 1;
			double newLiters = LITERS * gallons;
			
			System.out.println(gallons + "               " + newLiters);
		};
	}
   
   
   
  } 